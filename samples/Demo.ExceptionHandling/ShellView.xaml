<Window x:Class="Demo.ExceptionHandling.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShellView" Height="300" Width="300">
    <StackPanel>
        <Button Content="Command.Execute" Command="{Binding ExecuteCommand, Mode=OneTime}" />
        <Button Content="UIContext.Run" Command="{Binding UIContextRunCommand, Mode=OneTime}" />
        <Button Content="Task.Run" Command="{Binding TaskRunCommand, Mode=OneTime}" />
        <Button Content="Command.Async" Command="{Binding AsyncCommand, Mode=OneTime}" />
    </StackPanel>
</Window>
